.lightbox {
  margin-top: 50px;

  #lightboxwrapper {
   position: fixed;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   background: rgba(0, 0, 0, 0.7);
   display: none;
   z-index: 1;
  }

  #lightbox {
    width: 100%;
    height: 550px;
    top: 50px;
    left: 185px;
    display: block;
    z-index: 3;
  }

  #lightboxpic {
    width: 800px;
    height:400px;
    margin: 0 auto;

    img {
      margin: 0 auto;
    }
  }

  #lightboxcaption {
    width: 800px;
    height: 100px;
    margin: 20px auto;
  }

  #lightboxcontrolLeft, #lightboxcontrolRight {
    @include hover-fade(background-color);
    border-radius: 50%;
    background: $grey;
    cursor: pointer;
    height: 50px;
    width: 50px;
  }

  #lightboxcontrolLeft {
    background: $grey url(<%= asset_path('lightbox-arrow-left@2x.png') %>) no-repeat center;
    background-size: 25%;
    position: relative;
    bottom: 420px;
    left:15px;

    &:hover {
      background: darken($grey, 10%) url(<%= asset_path('lightbox-arrow-left@2x.png') %>) no-repeat center;
      background-size: 25%;
    }
  }

  #lightboxcontrolRight {
    background: $grey url(<%= asset_path('lightbox-arrow-right@2x.png') %>) no-repeat center;
    background-size: 25%;
    position: relative;
    bottom: 470px;
    float: right;
    right: 50px;

    &:hover {
      background: darken($grey, 10%) url(<%= asset_path('lightbox-arrow-right@2x.png') %>) no-repeat center;
      background-size: 25%;
    }
  }

  #lightboxh2 {
    width: 800px;
    height: 80px;
    text-align: center;
    margin: 10px;
  }


  #lightboxh2 h2 {
    color: black;
    font-family: $font-sans-serif-regular;
    font-size: 28px;
  }

  #lightboxcaption a {
    text-decoration: none;
  }

  #closebutton {
    float: right;
    padding: 15px 30px 0 0;
    font-size: 20px;
    text-decoration: underline;
  }

  #closebutton a {
    color:white;
  }
}
